<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_phone_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_centerInParent="true">

        </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medhavi"
        android:layout_margin="5dp"
        android:id="@+id/trusted_person_name"
        android:textSize="30dp">

    </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trusted_person_name"
            android:id="@+id/trusted_person_relation"
            android:text="(father)"
            android:layout_margin="5dp"
            android:textSize="25dp">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trusted_person_relation"
            android:id="@+id/trusted_person_contact"
            android:text="87870XXXXXX"
            android:layout_margin="5dp"
            android:textSize="25dp">

        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trusted_person_contact"
            android:id="@+id/trusted_person_adress"
            android:text="ABV IIITM GWALIOR"
            android:layout_margin="5dp"
            android:textSize="20dp">

        </TextView>



    </RelativeLayout>
</LinearLayout>